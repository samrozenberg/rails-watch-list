<div class="container">
  <div class="new_item_card" id="new_bookmark_card">
    <div class="p-3">
      <h1>Create a new Bookmark</h1>
      <br>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, label: "Choose a Movie" %>
        <%= f.input :comment, label: "Comment", as: :text, input_html: {rows: 3} %>
        <%# comment ça peut marcher sans préciser la liste %>
        <%# comment ajouter le bookmark %>
        <%# connection entre les 3 models %>
          <div class="d-flex justify-content-between align-items-center">
          <%= f.submit %>
          <%= link_to "Cancel", list_path(@list) %>
          </div>
        <% end %>
      </div>
  </div>
</div>
